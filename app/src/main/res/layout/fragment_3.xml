<!--            </EditText>-->
<!--        </LinearLayout>-->





        <Button
            android:id="@+id/btn_upload"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/upload">

        </Button>
    </LinearLayout>


</LinearLayout>